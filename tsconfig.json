{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "build/dist",
    "module": "esnext",
    "target": "es5",
    "lib": [
      "es6",
      "dom",
      "scripthost",
      "es2015.promise"
    ],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": false,
    "allowSyntheticDefaultImports": false
  },
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "config",
    "public",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts",
    "fontawesome-free-5.8.1-web",
    "manual.testing.report.ts",
    "src/samples"
  ]
}